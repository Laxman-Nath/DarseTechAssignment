<%@ page contentType="text/html;charset=UTF-8" language="java" %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Swagger UI</title>
    
    <!-- Load Swagger UI CSS from CDN -->
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/swagger-ui/4.16.1/swagger-ui.css">

    <!-- Load Swagger UI Bundle JavaScript from CDN -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/swagger-ui/4.16.1/swagger-ui-bundle.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/swagger-ui/4.16.1/swagger-ui-standalone-preset.js"></script>

    <!-- Swagger UI Initialization Script -->
    <script>
        // Initialize Swagger UI after the page loads
        window.onload = function() {
            const ui = SwaggerUIBundle({
                url: '${pageContext.request.contextPath}/swagger.json',  // Pointing to your OpenAPI JSON endpoint
                dom_id: '#swagger-ui',
                deepLinking: true,
                presets: [
                    SwaggerUIBundle.presets.apis,
                    SwaggerUIStandalonePreset
                ],
                layout: "StandaloneLayout"
            });
        };
    </script>
</head>
<body>
    <div id="swagger-ui"></div> <!-- Swagger UI container -->
</body>
</html>
